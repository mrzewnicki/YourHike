@model List<YourHike.Models.ViewModel.HikeVM>

@{
    ViewData["Title"] = "Wędrówki";
}

<div class="text-center">
    <h1 class="display-4 text-primary">Twoje wędrówki</h1>
</div>

@if(TempData["DeleteResult"] != null)
{
    <div>
        <span class="text-success">@TempData["DeleteResult"]</span>
    </div>
}

@if(TempData["EditResult"] != null)
{
    <div>
        <span class="text-success">@TempData["EditResult"]</span>
    </div>
}

<table class="table table-striped table-dark">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Start Date</th>
            <th scope="col">End Date</th>
            <th scope="col">Start Place</th>
            <th scope="col">End Place</th>
            <th scope="col">Distance</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in @Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate</td>
                    <td>@item.StartPlace</td>
                    <td>@item.EndPlace</td>
                    <td>@item.Distance</td>
                    <td><a href="/Hike/Details/@item.Id" class="btn btn-info">Szczegóły</a></td>
                </tr>
            }
        }
    </tbody>
</table>
